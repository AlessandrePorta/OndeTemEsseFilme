<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anonimous_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/anonimous_name"
        android:layout_margin="8dp"
        android:hint="@string/anonimous_name"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/anonimous_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/anonimous_button"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/anonimous_name"
        app:layout_constraintStart_toStartOf="@id/anonimous_name"
        app:layout_constraintEnd_toEndOf="@id/anonimous_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>